<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTrackerApp.CalorieCalculatorPage"
             Title="Calorie Calculator">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*,*,*">
        <Entry x:Name="weightEntry" Placeholder="Weight (kg)" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
        <Entry x:Name="durationEntry" Placeholder="Duration (min)" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" />
        <Button x:Name="runButton" Text="Run" Grid.Row="1" Grid.Column="0" Clicked="OnCalculateClicked" />
        <Button x:Name="cycleButton" Text="Cycle" Grid.Row="1" Grid.Column="1" Clicked="OnCalculateClicked" />
        <Button x:Name="swimButton" Text="Swim" Grid.Row="1" Grid.Column="2" Clicked="OnCalculateClicked" />
        <Button x:Name="walkButton" Text="Walk" Grid.Row="1" Grid.Column="3" Clicked="OnCalculateClicked" />
        <Label x:Name="calorieLabel" Text="Calories: " Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" />
        <BoxView HeightRequest="2" Color="Gray" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" />
    </Grid>
</ContentPage>