<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UltimateControlsDemo.AlertPage"
             Title="Alert Demo">
    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
        <Label x:Name="MessageLabel" Text="This is an alert message." FontSize="Medium" />
        <Button Text="Show Alert" Clicked="OnShowAlert" />
    </VerticalStackLayout>
</ContentPage>