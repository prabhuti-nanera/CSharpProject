<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="UltimateControlsDemo.LayoutsPage"
             Title="Layouts Demo">
    <ScrollView>
        <StackLayout>
            <!-- StackLayout -->
            <Label Text="StackLayout" FontSize="20" HorizontalOptions="Center"/>
            <StackLayout Orientation="Horizontal" BackgroundColor="LightBlue" Padding="10">
                <BoxView Color="Red" WidthRequest="50" HeightRequest="50"/>
                <BoxView Color="Green" WidthRequest="50" HeightRequest="50"/>
                <BoxView Color="Blue" WidthRequest="50" HeightRequest="50"/>
            </StackLayout>

            <!-- GridLayout -->
            <Label Text="GridLayout" FontSize="20" HorizontalOptions="Center" Margin="0,20,0,0"/>
            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, *">
                <BoxView Color="Orange" Grid.Row="0" Grid.Column="0" HeightRequest="50"/>
                <BoxView Color="Purple" Grid.Row="0" Grid.Column="1" HeightRequest="50"/>
                <BoxView Color="Pink" Grid.Row="1" Grid.Column="0" HeightRequest="50"/>
                <BoxView Color="Cyan" Grid.Row="1" Grid.Column="1" HeightRequest="50"/>
            </Grid>

            <!-- AbsoluteLayout -->
            <Label Text="AbsoluteLayout" FontSize="20" HorizontalOptions="Center" Margin="0,20,0,0"/>
            <AbsoluteLayout HeightRequest="200" BackgroundColor="LightYellow">
                <BoxView Color="Salmon" AbsoluteLayout.LayoutBounds="0.5,0.5,100,100" 
                         AbsoluteLayout.LayoutFlags="PositionProportional"/>
            </AbsoluteLayout>

            <!-- FlexLayout -->
            <Label Text="FlexLayout" FontSize="20" HorizontalOptions="Center" Margin="0,20,0,0"/>
            <FlexLayout Direction="Row" Wrap="Wrap" BackgroundColor="LightGray" Padding="10">
                <BoxView Color="DarkRed" WidthRequest="60" HeightRequest="60"/>
                <BoxView Color="DarkGreen" WidthRequest="60" HeightRequest="60"/>
                <BoxView Color="DarkBlue" WidthRequest="60" HeightRequest="60"/>
            </FlexLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
