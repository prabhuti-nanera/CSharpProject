<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:UltimateControlsDemo.Controls"
             x:Class="UltimateControlsDemo.ControlsPage"
             Title="Controls Demo">
    <VerticalStackLayout Padding="20">
        <Label Text="Controls Page" FontSize="Large" />
        <controls:CustomProgressBar x:Name="CustomProgress" Progress="0.7" HeightRequest="20" />
        <Slider Minimum="0" Maximum="1" Value="0.7" ValueChanged="OnSliderValueChanged" />
    </VerticalStackLayout>
</ContentPage>