<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="UltimateControlsDemo.MainFlyoutPage">
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu" BackgroundColor="LightGray">
            <StackLayout>
                <Button Text="Home" Clicked="OnHomeClicked"/>
                <Button Text="Layouts" Clicked="OnLayoutsClicked"/>
                <Button Text="Controls" Clicked="OnControlsClicked"/>
                <Button Text="Alert" Clicked="OnAlertClicked"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage x:Name="DetailPage"/>
    </FlyoutPage.Detail>
</FlyoutPage>
