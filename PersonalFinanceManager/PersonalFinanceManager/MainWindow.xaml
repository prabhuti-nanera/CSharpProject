<Window x:Class="PersonalFinanceManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Personal Finance Manager" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">

    <Window.Resources>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00C4B4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5"
                                BorderThickness="0" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#26A69A"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#00897B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

   
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF6F61"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5"
                                BorderThickness="0" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EF5350"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D81B60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

     
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#424242"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#616161"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

 
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#424242"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#616161"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" Background="{TemplateBinding Background}" 
                                              BorderBrush="{TemplateBinding BorderBrush}" 
                                              BorderThickness="0"/>
                                <ContentPresenter x:Name="ContentSite" Margin="{TemplateBinding Padding}"/>
                                <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}">
                                    <Border Background="#424242" BorderBrush="#616161" BorderThickness="1" CornerRadius="5">
                                        <ScrollViewer>
                                            <StackPanel>
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="#424242"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#616161"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

    
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#424242"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#616161"/>
            <Setter Property="RowBackground" Value="#424242"/>
            <Setter Property="AlternatingRowBackground" Value="#3A3A3A"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2E2E2E" Offset="0"/>
                <GradientStop Color="#1C2526" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1C2526" Padding="10" Margin="0,0,0,10">
            <TextBlock Text="Personal Finance Manager" FontSize="24" FontWeight="Bold" Foreground="#00C4B4" 
                       HorizontalAlignment="Center" FontFamily="Segoe UI"/>
        </Border>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10,50,10,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox Style="{StaticResource ModernTextBoxStyle}" x:Name="DescriptionTextBox" Width="150" 
                         ToolTip="Enter transaction description"/>
                <TextBox Style="{StaticResource ModernTextBoxStyle}" x:Name="AmountTextBox" Width="100" 
                         ToolTip="Enter amount"/>
                <DatePicker Style="{StaticResource ModernDatePickerStyle}" x:Name="DatePicker" Width="120" 
                            ToolTip="Select transaction date"/>
                <ComboBox Style="{StaticResource ModernComboBoxStyle}" x:Name="CategoryComboBox" Width="120" 
                          ToolTip="Select category"/>
                <ComboBox Style="{StaticResource ModernComboBoxStyle}" x:Name="TypeComboBox" Width="120" 
                          ToolTip="Select transaction type">
                    <ComboBoxItem Content="Income" Foreground="Black"/>
                    <ComboBoxItem Content="Expense" Foreground="Black"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Style="{StaticResource ModernButtonStyle}" Content="Add" Click="AddTransaction_Click"/>
                <Button Style="{StaticResource ModernButtonStyle}" Content="Update" Click="UpdateTransaction_Click"/>
                <Button Style="{StaticResource DeleteButtonStyle}" Content="Delete" Click="DeleteTransaction_Click"/>
                <Button Style="{StaticResource ModernButtonStyle}" Content="Generate Report" Click="GenerateReport_Click"/>
                <Button Style="{StaticResource ModernButtonStyle}" Content="Export XML" Click="ExportXml_Click"/>
            </StackPanel>
        </StackPanel>

        <DataGrid Style="{StaticResource ModernDataGridStyle}" x:Name="TransactionsGrid" Grid.Row="1" 
                  AutoGenerateColumns="True" SelectionChanged="TransactionsGrid_SelectionChanged"/>
    </Grid>
</Window>