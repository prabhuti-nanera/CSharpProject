<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExploreApp.MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Welcome to ExploreApp!" FontSize="24" HorizontalOptions="Center" />
            <Image Source="icon.png" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" />
            <Button Text="Explore Destinations" Clicked="OnNavigateClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>