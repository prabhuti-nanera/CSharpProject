@model EventManagementSystem.Models.Event
@{
    ViewData["Title"] = "Event Details";
}
<h1>Event Details</h1>
<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Location)</dd>
        <dt class="col-sm-2">Max Tickets</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MaxTickets)</dd>
        <dt class="col-sm-2">Approved</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IsApproved)</dd>
    </dl>
</div>
<div>
    <a asp-controller="Tickets" asp-action="Purchase" asp-route-eventId="@Model.Id">Buy Ticket</a> |
    <a asp-action="Index">Back to List</a>
</div>